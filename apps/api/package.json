{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "lint": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute askmeanything-db --local --file=./src/db/schema.sql",
    "db:migrate:remote": "wrangler d1 execute askmeanything-db --remote --file=./src/db/schema.sql",
    "db:migrate:limits": "wrangler d1 execute askmeanything-db --local --file=./src/db/0001_add_question_limits.sql",
    "db:migrate:limits:remote": "wrangler d1 execute askmeanything-db --remote --file=./src/db/0001_add_question_limits.sql",
    "db:migrate:rate-limits": "wrangler d1 execute askmeanything-db --local --file=./src/db/0002_add_rate_limits.sql",
    "db:migrate:rate-limits:remote": "wrangler d1 execute askmeanything-db --remote --file=./src/db/0002_add_rate_limits.sql",
    "db:migrate:fingerprint": "wrangler d1 execute askmeanything-db --local --file=./src/db/0003_add_server_fingerprint.sql",
    "db:migrate:fingerprint:remote": "wrangler d1 execute askmeanything-db --remote --file=./src/db/0003_add_server_fingerprint.sql"
  },
  "dependencies": {
    "@askmeanything/shared": "workspace:*",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.90.0"
  }
}
